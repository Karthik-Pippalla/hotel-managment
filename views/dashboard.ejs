<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/style1.css" />
    <link
      rel="icon"
      type="image/png"
      href="/images/favicon/favicon-96x96.png"
      sizes="96x96"
    />
    <link rel="icon" type="image/svg+xml" href="/images/favicon/favicon.svg" />
    <link rel="shortcut icon" href="/images/favicon/favicon.ico" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/images/favicon/apple-touch-icon.png"
    />
    <link rel="manifest" href="/images/favicon/site.webmanifest" />
  </head>
  <body>
    <header class="dashboard-header">
      <h1>CALAMITY JANE DASHBOARD</h1>
    </header>
    <!-- Manage Sections -->
    <%- include('partials/header') %>

    <!-- Overview Section -->
    <div class="dashboard-container">
      <h2 class="section-title">Overview</h2>

      <!-- Revenue (Last 24 Hours) -->
      <div class="metric-card highlight">
        <h3>Revenue (Last 24 Hours)</h3>
        <p class="metric-value">$<%= totalRevenue24Hours.toFixed(2) %></p>
        <p class="metric-description">Total revenue from the last 24 hours</p>
      </div>

      <!-- Other Metrics -->
      <div class="dashboard-metrics">
        <!-- Metric: Available Rooms -->
        <div class="metric-card">
          <h3>Available Rooms</h3>
          <p class="metric-value"><%= availableRooms %></p>
          <p class="metric-description">
            Rooms currently available for booking
          </p>
        </div>

        <!-- Metric: Bookings Today -->
        <div class="metric-card">
          <h3>Bookings Today</h3>
          <p class="metric-value"><%= bookingsToday %></p>
          <p class="metric-description">Bookings made today</p>
        </div>
      </div>

      <!-- Revenue Breakdown Section -->
      <h2 class="section-title">Revenue Breakdown</h2>
      <div class="dashboard-metrics">
        <!-- Metric: Last Week -->
        <div class="metric-card">
          <h3>Revenue (Last Week)</h3>
          <p class="metric-value">$<%= totalRevenue1Week.toFixed(2) %></p>
          <p class="metric-description">Total revenue from the last week</p>
        </div>

        <!-- Metric: Last Month -->
        <div class="metric-card">
          <h3>Revenue (Last Month)</h3>
          <p class="metric-value">$<%= totalRevenue1Month.toFixed(2) %></p>
          <p class="metric-description">Total revenue from the last month</p>
        </div>

        <!-- Metric: Last Year -->
        <div class="metric-card">
          <h3>Revenue (Last Year)</h3>
          <p class="metric-value">$<%= totalRevenue1Year.toFixed(2) %></p>
          <p class="metric-description">Total revenue from the last year</p>
        </div>
      </div>
    </div>
    <%- include('partials/footer') %>
  </body>
</html>
